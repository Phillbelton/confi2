{
  "name": "confiteria-quelita-backend",
  "version": "1.0.0",
  "description": "Backend API para Confiter√≠a Quelita - Sistema de ecommerce",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "migrate": "ts-node -r tsconfig-paths/register src/scripts/migrateProducts.ts",
    "seed:admin": "ts-node -r tsconfig-paths/register src/scripts/seedAdmin.ts",
    "seed:users": "ts-node -r tsconfig-paths/register src/scripts/seedUsers.ts",
    "seed:categories": "ts-node -r tsconfig-paths/register src/scripts/seedCategories.ts",
    "seed:brands": "ts-node -r tsconfig-paths/register src/scripts/seedBrands.ts",
    "seed:tags": "ts-node -r tsconfig-paths/register src/scripts/seedTags.ts",
    "seed:products": "ts-node -r tsconfig-paths/register src/scripts/seedProducts.ts",
    "seed:all": "npm run seed:categories && npm run seed:brands && npm run seed:tags && npm run seed:products",
    "backup": "ts-node -r tsconfig-paths/register src/scripts/backup.ts",
    "restore": "ts-node -r tsconfig-paths/register src/scripts/restore.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "cross-env NODE_ENV=test jest --runInBand",
    "test:watch": "cross-env NODE_ENV=test jest --watch --runInBand",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage --runInBand",
    "test:verbose": "cross-env NODE_ENV=test jest --verbose --runInBand"
  },
  "keywords": [
    "ecommerce",
    "api",
    "express",
    "typescript",
    "mongodb"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/nodemailer": "^7.0.3",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "isomorphic-dompurify": "^2.31.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.1.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.10",
    "sharp": "^0.33.2",
    "slugify": "^1.6.6",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-mongo-sanitize": "^1.3.2",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.19.24",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "cross-env": "^10.1.0",
    "eslint": "^8.56.0",
    "jest": "^30.2.0",
    "mongodb-memory-server": "^10.3.0",
    "nodemon": "^3.0.3",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}

# ==================================================
# CONFITERÍA QUELITA - PRODUCCIÓN (Seenode)
# ==================================================

# Entorno
NODE_ENV=production

# Puerto (Seenode lo asigna automáticamente, pero mantén 5000 por defecto)
PORT=5000

# URLs (Reemplaza con tus URLs de Seenode)
BACKEND_URL=https://confiteria-quelita-backend-xxx.seenode.app
FRONTEND_URL=https://confiteria-quelita-frontend-xxx.seenode.app

# MongoDB Atlas
# Obtén tu connection string de MongoDB Atlas
# Formato: mongodb+srv://usuario:password@cluster.xxxxx.mongodb.net/database?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://quelita-admin:TU_PASSWORD_AQUI@cluster0.xxxxx.mongodb.net/confiteria-quelita?retryWrites=true&w=majority

# JWT Secrets (GENERA STRINGS ALEATORIOS SEGUROS - MÍNIMO 64 CARACTERES)
# Puedes usar: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=GENERA_UN_SECRET_ALEATORIO_MUY_LARGO_Y_SEGURO_AQUI_64_CARACTERES_MINIMO
JWT_REFRESH_SECRET=GENERA_OTRO_SECRET_DIFERENTE_PARA_REFRESH_64_CARACTERES_MINIMO
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Archivos y Uploads
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Cloudinary (ALTAMENTE RECOMENDADO para producción)
# Obtén credenciales en: https://console.cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
USE_CLOUDINARY=true

# WhatsApp Business
WHATSAPP_BUSINESS_PHONE=56920178216
WHATSAPP_DEFAULT_MESSAGE=Hola, me gustaría hacer una consulta sobre

# Email / SMTP (Gmail)
# Sigue las instrucciones en CONFIGURACION_EMAIL_WHATSAPP.md para obtener contraseña de app
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=tu-email-de-produccion@gmail.com
SMTP_PASS=tu-contraseña-de-app-de-16-caracteres-sin-espacios
SMTP_FROM_NAME=Confitería Quelita
SMTP_FROM_EMAIL=noreply@quelita.com

# Admin por defecto (CAMBIA LA CONTRASEÑA DESPUÉS DEL PRIMER LOGIN)
DEFAULT_ADMIN_EMAIL=admin@quelita.com
DEFAULT_ADMIN_PASSWORD=CambiaEsto123!InmediatamenteDespuesDelDeploy
DEFAULT_ADMIN_NAME=Administrador Quelita

# ==================================================
# NOTAS IMPORTANTES:
# ==================================================
# 1. NO commitees este archivo con valores reales
# 2. Configura estas variables en el panel de Seenode
# 3. Cambia TODOS los secrets después del deployment
# 4. Usa contraseñas fuertes y únicas
# 5. Habilita 2FA en todas las cuentas relacionadas

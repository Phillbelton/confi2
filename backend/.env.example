# ==================================================
# CONFITERÍA QUELITA - BACKEND CONFIGURATION
# ==================================================

# Entorno de ejecución
NODE_ENV=development

# Puerto del servidor
PORT=5000

# Backend URL (usado para construir URLs absolutas de imágenes)
BACKEND_URL=http://localhost:5000

# MongoDB
MONGODB_URI=mongodb://localhost:27017/confiteria-quelita

# JWT
JWT_SECRET=tu_secreto_jwt_muy_seguro_cambia_esto_en_produccion
JWT_REFRESH_SECRET=tu_refresh_secret_muy_seguro_cambia_esto
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Frontend URL (para CORS)
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Archivos y Uploads
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Cloudinary (Image CDN Service)
# Obtén tus credenciales en: https://console.cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
USE_CLOUDINARY=true

# WhatsApp Business
WHATSAPP_BUSINESS_PHONE=56920178216
WHATSAPP_DEFAULT_MESSAGE=Hola, me gustaría hacer una consulta sobre

# Email / SMTP (Gmail)
# Para obtener contraseña de aplicación de Gmail:
# 1. Ve a https://myaccount.google.com/security
# 2. Activa "Verificación en 2 pasos"
# 3. Ve a https://myaccount.google.com/apppasswords
# 4. Genera una contraseña para "Correo" y "Otro dispositivo"
# 5. Usa esa contraseña de 16 caracteres en SMTP_PASS
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=tu-email@gmail.com
SMTP_PASS=tu-contraseña-de-16-caracteres-sin-espacios
SMTP_FROM_NAME=Confitería Quelita
SMTP_FROM_EMAIL=noreply@quelita.com

# Admin por defecto (para seed)
DEFAULT_ADMIN_EMAIL=admin@quelita.com
DEFAULT_ADMIN_PASSWORD=Admin123!
DEFAULT_ADMIN_NAME=Administrador Quelita
